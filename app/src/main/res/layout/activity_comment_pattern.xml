<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".activity.LiveRoomActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="3dp"
            android:layout_height="16dp"
            android:layout_marginLeft="@dimen/marginLeft_15"
            android:background="@color/height_line_e7b811" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/marginLeft_15"
            android:layout_weight="1"
            android:text="评论"
            android:textColor="@color/text_color_000000"
            android:textSize="@dimen/text_size_17" />

        <ImageView
            android:id="@+id/img_downClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:src="@mipmap/livepage_btn_arrows" />
    </LinearLayout>

    <EditText
        android:id="@+id/et_comment"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="@dimen/marginLeft_15"
        android:layout_marginRight="@dimen/marginRight_15"
        android:background="@drawable/solid_rectangle_shape_gray"
        android:gravity="top"
        android:hint="\@wsjed..."
        android:inputType="textMultiLine|text"
        android:lineSpacingMultiplier="1.3"
        android:paddingLeft="@dimen/paddingLeft_10"
        android:paddingTop="10dp"
        android:textColor="@color/text_color_221814" 
        android:textColorHint="@color/text_color_838383"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginTop_10"
        android:gravity="right"
        android:orientation="horizontal"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/tv_publish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:background="@drawable/solid_rectangle_shape_gray"
            android:paddingBottom="8dp"
            android:paddingLeft="23dp"
            android:paddingRight="23dp"
            android:paddingTop="8dp"
            android:text="发表"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_15" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/marginRight_15"
            android:background="@drawable/solid_rectangle_shape_gray"
            android:paddingBottom="8dp"
            android:paddingLeft="23dp"
            android:paddingRight="23dp"
            android:paddingTop="8dp"
            android:text="发表"
            android:textColor="@color/white" 
            android:visibility="gone"/>
    </LinearLayout>


</LinearLayout>
