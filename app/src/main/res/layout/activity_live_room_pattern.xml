<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.artmofang.livebroadcast.activity.LiveRoomActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_commentName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/marginLeft_15"
            android:text="赵晓琪"
            android:textColor="@color/text_color_888888"
            android:textSize="@dimen/text_size_15" />

        <ImageView
            android:id="@+id/img_isLiveMaster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            app:srcCompat="@mipmap/livepage_icon_anchor" 
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_liveTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:paddingRight="@dimen/paddingRight_13"
            android:text="2016-04-01  13:14"
            android:textColor="@color/text_color_aeaeae"
            android:textSize="@dimen/text_size_11" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_studentComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/marginLeft_15"
        android:layout_marginRight="@dimen/marginRight_17"
        android:lineSpacingMultiplier="1.3"
        android:text="这个老师讲课不错哟~啧啧~是我喜欢的风格老师讲是我喜欢的风格老师讲"
        android:textColor="@color/text_color_333333"
        android:textSize="@dimen/text_size_15" />

    <LinearLayout
        android:id="@+id/ll_reply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/marginLeft_15"
            android:text="回复"
            android:textColor="@color/text_color_4876b3"
            android:textSize="@dimen/text_size_15" />

        <TextView
            android:id="@+id/tv_replyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\@赵晓琪" 
            android:layout_marginLeft="5dp"
            android:textColor="@color/text_color_888888"
            android:textSize="@dimen/text_size_15" />

        <TextView
            android:id="@+id/tv_replyContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="：好好上课，严禁撩妹"
            android:textColor="@color/text_color_333333"
            android:textSize="@dimen/text_size_15" />
    </LinearLayout>


</LinearLayout>
